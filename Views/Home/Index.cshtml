@model Product
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Products and Categories</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/style.css"/>
  </head>
  <body>
    <div class="container">
        <h1>Products | <a href="/categories">Categories</a></h1><br>
        <div class="left">
            <h1>New Product</h1><br>
            <form asp-action="Product" asp-controller="Home" method="post">
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="Name" type="text" class="form-control" id="inputEmail3">
                    </div>
                </div>
                <span asp-validation-for="Name"></span>
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <input asp-for="Description" type="text" class="form-control" id="inputEmail3">
                    </div>
                </div>
                <span asp-validation-for="Description"></span>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input asp-for="Price" type="number" class="form-control" id="inputEmail3">
                    </div>
                </div>
                <span asp-validation-for="Price"></span>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
        <div class="right">
            <h1>Existing Products</h1>
            <ul>
                @foreach (var product in @ViewBag.products)
                {
                    <li>
                        <a href="products/@product.ProductId">@product.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
